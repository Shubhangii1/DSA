package TEST1;

public class sumOfNNumsrecr {
	
	public static int sumOfNums(int n) {
		if(n<=1) { //or n<=0
			return n;
		}
		 return n + sumOfNums(n-1);
		 // return (n * (n + 1)) / 2;  // O(1) time complexity
		
		
		
	}
	
	public static void main(String[] args) {
		int n =5;
		System.out.println(sumOfNums(n));
	}
}


